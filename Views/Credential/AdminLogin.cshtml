@model DOMIN_MVC.Models.Admin

@{
    ViewData["Title"] = "AdminLogin";
    Layout = "LoginPage";
}

<h3 style=text-align:center> Domino's </h3>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<div class="row row d-flex aligns-items-center justify-content-center">
    <div class="col-md-4 card p-3 px-5 py-5 mt-3 bg-transparent">
        <h1 style=text-align:center>Admin Login </h1>
        <form asp-action="AdminLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group ">
                <label asp-for="EmailID" class="control-label"></label>
                <input asp-for="EmailID" class="form-control" />
                <span asp-validation-for="EmailID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <div class="input-group">
                    <input  asp-for="Password" type="password" class="form-control " />
                    <div class="input-group-append">
                        <button id="show_password" class="btn btn-primary" type="button">
                            <span class="fa fa-eye-slash icon"></span>
                        </button>
                    </div>
                </div>
            </div>
            @if (ViewBag.ErrorMessageA != null)
            {
                <strong style="color:red;text-align:center"> @ViewBag.ErrorMessageA</strong>
            }

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary"  />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }



